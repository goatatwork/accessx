FROM goatatwork/php-fpm7.1:latest

MAINTAINER Goat

RUN apt-get update \
&& apt-get -y --no-install-recommends install supervisor iputils-ping nano \
&& apt-get clean; rm -rf /var/lib/apt/lists/ /tmp/ /var/tmp/ /usr/share/doc/ \
&& export TERM=xterm

COPY docker/horizon-supervisor/supervisord.conf /etc/supervisord.conf

COPY . /var/www/html
RUN cp .env.example .env
RUN sed -i -e 's/DB_PASSWORD=/DB_PASSWORD=1q2w3e4r/g' .env

ENTRYPOINT ["/usr/bin/supervisord", "-n", "-c", "/etc/supervisord.conf"]
